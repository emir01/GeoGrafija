@using GeoGrafija.ViewModels.LocationTypeViewModels
@model DisplayLocationTypeViewModel
@{
    ViewBag.Title = "Details";
}
<div id="LocationTypeDetails" class="formBackground generalFormLayout">
    <h2 class="formHeader">
        Детали за тип на локација :</h2>
    <div class="display-label">
        <b>@Html.LabelFor(model => model.TypeName) </b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TypeName)
    </div>
    <div class="display-label">
        <b>@Html.LabelFor(model => model.TypeDescription)</b>
    </div>
    <div class="display-field revetMe richDisplayField detailDescription">
        <div class="padding">
            @Html.Raw(Model.TypeDescription)
        </div>
    </div>
    <div class="display-label">
        <b>@Html.LabelFor(model => model.CreatedBy) </b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreatedBy)
    </div>
    <div class="display-label">
        <b>@Html.LabelFor(model => model.Icon) </b>
    </div>
    <div class="display-field">
        <img src="@Url.MarkerImages(Model.Icon)" alt="@Model.Icon" />
    </div>
    <div class="display-label">
        <b>@Html.LabelFor(model => model.DefaultDisplayName) </b>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DefaultDisplayName)
    </div>
    <div class="display-label">
        <b>@Html.LabelFor(model => model.Color) </b>
    </div>
    <div class="display-field">
        <span class="colorPickerDisplayOnlyBox">@Html.DisplayFor(model => model.Color)</span>
        <div class="colorPickerDisplayOnlyPreview">
        </div>
    </div>
    <p class="displayButtonContainer">
        @Html.ActionLink("Промени", "Edit", new { id = Model.ID }, new{@class="button blue fixA"}) |
        @Html.ActionLink("Назад кон Листа", "Index", null, new { @class = "button green fixA" })
    </p>
</div>
<input type="hidden" id="SelectedPage" value="Типови Локации!" />