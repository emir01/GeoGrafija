@using GeoGrafija.ViewModels

@using GeoGrafija.ViewModels.LocationViewModels

@model LocationFormViewModel

    @Html.HiddenFor(model=>model.ID)

    <div class="editor-label">
        @Html.LabelFor(model => model.Name)
    </div>

    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>

    <div class="editor-field richEditorField">
        @Html.EditorFor(model => model.Description)

        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.ChosenType)
    </div>

    <div class="editor-field">
        @Html.DropDownListFor(model => model.ChosenType, Model.LocationTypesSelectList, new { @class = "dropKickEnabled" })
        <div class= "clear"></div>
        @Html.ValidationMessageFor(model => model.ChosenType)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.ChosenDisplaySetting)
    </div>
    
<div class="editor-field">
        @Html.DropDownListFor(model => model.ChosenDisplaySetting, Model.LocationDisplaySettingsSelectList, "--Изберете една Вредност--",new { @class = "dropKickEnabled"})
        <a href="#" id="showDisplay"><img src="../../Content/images/eye.png" alt="Прикажи Поглед" class="iconSmallImage"/><div class="clear"></div></a>
        <div class= "clear"></div>
        @Html.ValidationMessageFor(model => model.ChosenDisplaySetting)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.CurrentDisplaySetting)
    </div>
    <div class= "clear"></div>
    <div class="editor-field">
        @Html.EditorFor(model => model.CurrentDisplaySetting) Да
        
        @Html.ValidationMessageFor(model => model.CurrentDisplaySetting)
    </div>

    <div id="displayNameHidden" class="hidden">
        <div class="editor-label">
            @Html.LabelFor(model => model.DisplayName)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.DisplayName)
            
            @Html.ValidationMessageFor(model => model.DisplayName)
        </div>
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.ParentLocationName)
    </div>

    <div class="editor-field">
        @Html.EditorFor(model => model.ParentLocationName)
        <a href="#" id="ClearParentLocation">Избриши родител!</a>
    </div>

    <p class="formButtonContainer">
        <input type="submit" id="submitButton" class="blue button createButton" value="Зачувај" />
    </p>

    @Html.HiddenFor(model => model.Lat)
    @Html.HiddenFor(model => model.Lng)
    @Html.HiddenFor(model => model.Zoom)
    @Html.HiddenFor(model => model.MapType)
    @Html.HiddenFor(model => model.ParentLocationId)
